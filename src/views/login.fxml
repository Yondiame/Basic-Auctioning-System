<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="Controls.Login">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="402.0" prefWidth="574.0"
                    style="-fx-background-color: gray;" VBox.vgrow="ALWAYS">
            <children>
                <ImageView fitHeight="438.0" fitWidth="678.0" layoutY="-13.0" opacity="0.88" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@/images/bb4.jpg"/>
                    </image>
                </ImageView>
                <AnchorPane layoutX="358.0" layoutY="40.0" opacity="0.88" prefHeight="298.0" prefWidth="298.0"
                            style="-fx-background-color: white;">
                    <children>
                        <Pane fx:id="login" layoutX="58.0" layoutY="74.0">
                            <children>
                                <PasswordField fx:id="password" layoutY="66.0" prefHeight="26.0" prefWidth="190.0"
                                               promptText="PASSWORD">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                        </PasswordField>
                                <TextField fx:id="uname" prefHeight="26.0" prefWidth="190.0"
                                           promptText="USERNAME/EMAIL">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                        </TextField>
                            </children>
                        </Pane>
                        <Button fx:id="sign" layoutX="102.0" layoutY="194.0" mnemonicParsing="false" prefHeight="32.0"
                                prefWidth="102.0" text="SIGN IN"/>
                    </children>
                    <effect>
                        <Blend>
                            <topInput>
                                <Glow level="0.18"/>
                            </topInput>
                        </Blend>
                    </effect>
                    <opaqueInsets>
                        <Insets top="22.0"/>
                    </opaqueInsets>
                </AnchorPane>
                <ImageView fitHeight="59.0" fitWidth="125.0" layoutX="563.0" layoutY="361.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@/images/capital.png"/>
                    </image>
                </ImageView>
                <Button fx:id="x" layoutX="624.0" layoutY="1.0" mnemonicParsing="false" prefHeight="26.0"
                        prefWidth="31.0" text="X"/>
            </children>
            <effect>
                <Blend opacity="0.19"/>
            </effect>
        </AnchorPane>
    </children>
</VBox>
